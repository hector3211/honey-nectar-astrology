---
// Astro component for responsive navigation
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/#about", label: "Abut" },
  { href: "/#features", label: "Offerings" },
  { href: "/#contact", label: "Contact" },
];
---

<nav class="">
  <!-- Desktop Navigation -->
  <div class="hidden md:flex justify-between items-center p-4">
    <div class="flex items-center space-x-4">
      <img src="/rocket-icon.svg" alt="Rocket" class="w-8 h-8" />
      <h1 class="text-xl font-bold">AstroNav</h1>
    </div>
    <div class="flex space-x-6">
      {
        navLinks.map((link) => (
          <a href={link.href} class="hover:text-blue-400 transition-colors">
            {link.label}
          </a>
        ))
      }
    </div>
  </div>

  <!-- Mobile Navigation -->
  <div class="md:hidden">
    <div class="flex justify-between items-center p-4">
      <div class="flex items-center space-x-4">
        <img src="/rocket-icon.svg" alt="Rocket" class="w-8 h-8" />
        <h1 class="text-xl font-bold">AstroNav</h1>
      </div>
      <button id="mobile-menu-toggle" class="focus:outline-none">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <div id="mobile-menu" class="hidden absolute w-full bg-gray-800 z-10">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class="block p-4 border-t border-gray-700 hover:bg-gray-700 transition-colors"
          >
            {link.label}
          </a>
        ))
      }
    </div>
  </div>
</nav>

<script>
  document
    .getElementById("mobile-menu-toggle")
    ?.addEventListener("click", () => {
      const mobileMenu = document.getElementById("mobile-menu");
      mobileMenu?.classList.toggle("hidden");
    });
</script>

<style>
  /* Additional custom styles can be added here */
</style>
