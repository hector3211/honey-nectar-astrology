---
import ContactForm from "@/components/ContactForm.tsx";
---

<section id="contact" class="relative text-zinc-900 body-font py-20">
  <div class="container px-5 py-5 sm:py-24 mx-auto">
    <div class="lg:w-1/2 w-full mb-6 lg:mb-20">
      <h1 class="sm:text-5xl text-2xl font-bold title-font mb-2">Contact</h1>
      <div class="h-1 w-20 bg-secondary rounded"></div>
    </div>
    <div class="flex flex-col text-center w-full mb-12">
      <h1 class="sm:text-4xl text-2xl font-bold title-font mb-4">
        Book With Me
      </h1>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base">
        Reach out to me with any questions or inquiries.
      </p>
    </div>
    <div
      class="relative w-full md:max-w-md lg:max-w-5xl mx-auto p-5 border rounded-md"
    >
      <ContactForm client:load />
    </div>
  </div>
</section>
